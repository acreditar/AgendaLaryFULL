{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "vitest/globals",
            "@testing-library/jest-dom"
        ],
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ES2022",
        "allowJs": true,
        "noEmit": true
    },
    "include": [
        "src",
        "vitest.setup.ts",
        "vitest.config.ts"
    ]
}